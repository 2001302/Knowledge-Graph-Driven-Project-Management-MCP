{
  "name": "knowledge-graph-driven-project-management-mcp",
  "version": "1.0.0",
  "description": "Knowledge Graph Driven Project Management MCP Server",
  "main": "dist/index.js",
  "bin": {
    "knowledge-graph-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:setup": "node dist/index.js setup ./test-project",
    "test:generate": "node dist/index.js generate ./test-project",
    "test:clear": "node dist/index.js clear ./test-project",
    "test:create": "node scripts/create-demo-project.js",
    "test:cleanup": "node scripts/create-demo-project.js cleanup",
    "test:setup-project": "npm run test:create && node dist/index.js setup ./test-project",
    "test:generate-project": "node dist/index.js generate ./test-project",
    "test:clear-project": "node dist/index.js clear ./test-project",
    "test:full": "npm run test:setup-project && npm run test:generate-project && echo 'Test completed. Check ./test-project for knowledge graph files.'"
  },
  "keywords": [
    "mcp",
    "knowledge-graph",
    "project-management",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.33",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@itseasy21/mcp-knowledge-graph": "^1.0.7",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chalk": "^5.6.2",
    "yargs": "^18.0.0",
    "zod": "^4.1.9"
  }
}
